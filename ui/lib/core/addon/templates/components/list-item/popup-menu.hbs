{{#if this.hasMenu}}
  <PopupMenu>
    <Confirm as |c|>
      <nav class="menu">
        <ul class="menu-list">
          {{yield (hash Message=c.Message)}}
        </ul>
      </nav>
    </Confirm>
  </PopupMenu>
{{else}}
  {{yield this.item}}
{{/if}}